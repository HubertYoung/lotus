<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


   <TextView android:layout_width="match_parent"
             android:gravity="center"
             android:id="@+id/tv_content"
             android:text="content"
             android:layout_height="50dp"/>
    <View
        android:id="@+id/pp_detail_ad_divider"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:visibility="gone"
        android:background="#f7f7f7"/>

    <!--<View
        android:id="@+id/pp_item_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/user_info_background_color" />-->

    <LinearLayout
        android:id="@+id/gc_feed_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gc_feed_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/pp_qz_feed_share"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="分享"
                android:textColor="#666666"
                android:textSize="14dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- <View
                 android:layout_width="1px"
                 android:layout_height="15dp"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:background="#e7e7e7"/>-->

            <TextView
                android:id="@+id/gc_feed_comment_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/pp_qz_feed_comments"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="评论"
                android:textColor="#666666"
                android:textSize="14dp" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <!--<View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#e7e7e7"/>-->

        </RelativeLayout>


        <LinearLayout
            android:gravity="center"
            android:id="@+id/rl_praise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/gc_feed_praise_iv"
                android:src="@drawable/pp_qz_feed_unlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/gc_feed_praise_tv"
                android:gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#666666"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    <!-- ===========end of square_feed_content_layout============= -->

    <View
        android:id="@+id/pp_item_bottom_devider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>

    <!--<View
        android:id="@+id/pp_item_bottom_gap"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/user_info_background_color"/>-->
</LinearLayout>
